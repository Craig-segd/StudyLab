@model StudyLab.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="centerRegister">
    <div id="page_name" class="btn-primary pageName pageRegister">Register</div>
    
    <div class="jumbotron jumbotron-register">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new {@class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new {@class = "control-label"})
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new {@class = "form-control center-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new {@class = "form-control center-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control center-block"})
                </div>
            </div>  
            <hr/>
                    <input type="submit" class="btn btn-primary btn-block center-block" value="Register"/>

        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
