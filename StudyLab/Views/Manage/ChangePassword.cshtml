@model StudyLab.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<div class="centerRegister">
    <div id="page_name" class="btn-primary pageName pageRegister">Change</div>
    <div class="jumbotron jumbotron-register">

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new {@class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new {@class = "control-label"})
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control center-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new {@class = "control-label"})
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control center-block"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control center-block"})
                </div>
            </div>
            <hr/>
                    <input type="submit" value="Change password" class="btn btn-primary btn-block center-block"/>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}